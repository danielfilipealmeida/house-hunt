{% from 'breadcrumb.html.twig' import breadcrumb %}
{% from 'logblock.html.twig' import logblock %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}House Hunt{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
        <div class="container">
            <nav class="navbar" role="navigation" aria-label="main navigation">
                <div class="navbar-brand">
                    <a class="navbar-item" href="/">
                        <img src="/images/Logo.png" height="50" />
                    </a>
                </div>
                <div class="navbar-menu">
                    <div class="navbar-start">
                        <a class="navbar-item" href="{{ path("search") }}">
                        Searches
                        </a>
                        <a class="navbar-item" href="{{ path("search_result") }}">
                        Search Results
                        </a>
                        <a class="navbar-item" href="{{ path("property") }}">
                        Properties
                        </a>
                    </div>
                </div>
                {{ logblock() }}
            <nav>
        </div>

        {% if breadcrumb is defined %}
            {{ breadcrumb(breadcrumb) }}
        {% endif %}
        
        <div class="section">
            <div class="container">

                {% block body %}{% endblock %}

            </div>
        </div>
    </body>
</html>


