{% extends 'base.html.twig' %}

{% block body %}

    <section class="section">
        <div class="columns">
            <div class="column is-4 is-offset-4">

                {% if error %}
                    <div class="notification">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form action="{{ path('login') }}" method="post" id="loginForm">
                    <div class="field">
                        <label class="label" for="username">Username:</label>
                        <p class="control">
                            <input class="input" type="text" id="username" name="_username" value="{{ last_username }}" />
                        </p>
                    </div>

                    <div class="field">
                        <label class="label" for="password">Password:</label>
                        <p class="control">
                            <input class="input" id="password" name="_password" type="password" />
                        </p>
                    </div>
                    <div class="field is-grouped">
                        <div class="control">
                            <button class="button is-link" type="submit" id="submitButton">Login</button>
                        </div>
                        <div class="control">
                            <button class="button is-text">Sign up</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

{% endblock %}